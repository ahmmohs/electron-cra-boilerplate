{
  "name": "electron-cra-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-packager": "^14.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "electron": "^15.5.5",
    "electron-builder": "^21.0.15",
    "wait-on": "^3.3.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "electron .",
    "dev": "concurrently \"SET BROWSER=none&&npm start\" \"wait-on http://localhost:3000 && npm run start-electron\"",
    "pack-all": "electron-builder --em.main=build/electron.js --mac --win -p always",
    "pack-win": "electron-builder -c.extraMetadata.main=build/electron.js --win",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && build",
    "pack": "build --dir",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "com.github.ahmmohs.electroncra",
    "files": [
      "build/**/*", 
      "node_modules/**/*", 
      "!build-scripts${/*}"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "author": "ahmmohs",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
